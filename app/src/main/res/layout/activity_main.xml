<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/border">
<TextView
    android:id="@+id/welcomtxt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="90dp"

    android:text="Welcome"
    android:textAlignment="center"
    android:textColor="@color/aqua"
    android:textSize="26sp"
    android:fontFamily="@font/indus"
    />
    <TextView
        android:id="@+id/totxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="to"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/blue"
        android:fontFamily="@font/indus"
        android:layout_below="@+id/welcomtxt"
        />
    <TextView
        android:id="@+id/admissiontxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:text="ADMISSION GUIDE"
        android:textAlignment="center"
        android:textSize="26sp"
        android:fontFamily="@font/indus"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_below="@id/totxt"
        />
       <Button
           android:id="@+id/btnStart"
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_below="@id/admissiontxt"
           android:text="START GUIDE"
           android:textColor="@color/blue"
           android:background="@drawable/border2"
           android:textAlignment="center"
           android:layout_marginRight="10dp"
           android:layout_marginLeft="10dp"/>
<Button
    android:id="@+id/admin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/btnStart"
    android:text="@string/fa_user_lock_solid"
    android:fontFamily="@font/awesome"
    android:layout_marginTop="10dp"
    android:background="@drawable/border"/>
   </RelativeLayout>

</LinearLayout>